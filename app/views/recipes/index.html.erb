<div id="recipes" class="transitions-enabled">
<% if !user_signed_in? %>
<div class="panel center">
		<h3>Join the fun and upload a juicing recipe</h3>
		 	
		<p>
	       <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
	       <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
	    </p>
	    
	</div>
	<% end %>
<h1>Juice Recipe List</h1>

<div class="panel center">
<% if user_signed_in? %>
<p><%= link_to "New Recipe", new_recipe_path, class: "btn btn-success btn-sm" %></p>
<% end %>
</div>

	<% @recipes.each do |recipe| %>
	<%= recipe.user.name if recipe.user %>
	
		<ul>
			<center><p><%= link_to(recipe.title, recipe) %></p></center>
			<center><%= recipe.veggie1 %></center>
			<center><%= recipe.veggie2 %></center>
			<center><%= recipe.fruit1 %></center>
			<center><%= recipe.fruit2 %></center><br>
			<center><%= link_to image_tag(recipe.image.url(:thumb)), recipe %></center><br>
		</ul><br>
	
	<% end %>

<div class="panel center">
  <center><%= will_paginate @recipes, renderer: BootstrapPagination::Rails %></center>
</div>

<nav class="navbar navbar-default" role="navigation">
	<div class="container">
	    <ul class="nav navbar-nav navbar-left">
<li><%= link_to("Home", recipes_path)%></li>
</ul>
</div><!-- /.container --> 
</nav>
</div>
